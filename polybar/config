[colors]
    background = #00000000
    background-alt = #40000000
    foreground = #dfdfdf
    foreground-alt = #35000000
    primary = #ffb52a
    secondary = #e60053
    alert = #bd2c40
    underline = #b8dbf2

[bar/main-left]
    monitor = ${env:MONITOR:DVI-D-1}
    height = 20
    fixed-center = true
    background = ${colors.background}
    foreground = ${colors.foreground}
    line-color = ${colors.underline}
    line-size = 4
    border-color = ${colors.background}
    border-size = 8
    padding-left = 1
    padding-right = 3
    module-margin-left = 2
    module-margin-right = 2
    modules-left = i3 spotify
    modules-center = date
    modules-right = alsa memory cpu network
    font-0 = "pango:Fira Sans Mono:pixelsize=11;2"
    font-1 = "MaterialDesignIcons:size=11;2"
    font-2 = "MaterialDesignIcons:size=12;3"
    font-3 = "Font Awesome 5 Free:style=Regular:size=10;0"
    font-4 = "Font Awesome 5 Free:style=Solid:size=10;0"
    font-5 = "Font Awesome 5 Brands:style=Regular:size=10;0"

[bar/main-right]
    monitor = ${env:MONITOR:DVI-I-1}
    height = 20
    fixed-center = true
    background = ${colors.background}
    foreground = ${colors.foreground}
    line-color = ${colors.underline}
    line-size = 4
    border-color = ${colors.background}
    border-size = 8
    padding-left = 1
    padding-right = 3
    module-margin-left = 2
    module-margin-right = 2
    modules-left = i3 spotify
    modules-center = date
    modules-right = alsa memory cpu network
    font-0 = "pango:Fira Sans Mono:pixelsize=11;2"
    font-1 = "MaterialDesignIcons:size=11;2"
    font-2 = "MaterialDesignIcons:size=12;3"
    font-3 = "Font Awesome 5 Free:style=Regular:size=10;0"
    font-4 = "Font Awesome 5 Free:style=Solid:size=10;0"
    font-5 = "Font Awesome 5 Brands:style=Regular:size=10;0"

[module/spotify]
    type=custom/script
    interval=5
    label-active-font = 2
    format = <label>
    exec = python ~/.config/polybar/plugins/spotify.py -f '{artist}  |  {song}'

[module/i3]
    type = internal/i3
    format = <label-state>
    index-sort = false
    wrapping-scroll = false
    pin-workspaces = true
    label-mode-padding = 2
    label-mode-foreground = #000
    label-mode-background = ${colors.primary}
    label-focused = %index%
    label-focused-background = #00000000
    label-focused-underline = ${colors.underline}
    label-focused-padding = 2
    label-unfocused = %index%
    label-unfocused-padding = 2
    label-visible = %index%
    label-visible-background = ${self.label-focused-background}
    label-visible-padding = ${self.label-focused-padding}
    label-urgent = %index%
    label-urgent-background = ${colors.alert}
    label-urgent-padding = 2
    fuzzy-match = true

[module/cpu]
    type = internal/cpu
    interval = 2
    format-prefix-foreground = ${colors.foreground}
    label = "CPU %percentage%%"

[module/memory]
    type = internal/memory
    interval = 2
    format-prefix-foreground = ${colors.foreground}
    label = "RAM %percentage_used%%"

[module/network]
    type = internal/network
    interface = wlp0s20u9
    interval = 3.0

    format-connected = <ramp-signal>  <label-connected>
    label-connected = %essid%

    format-disconnected = <label-disconnected>
    format-disconnected-underline = ${colors.alert}
    label-disconnected = xx.xx.xx.xx
    
    ramp-signal-0 = 😱
    ramp-signal-1 = 😠
    ramp-signal-2 = 😒
    ramp-signal-3 = 😊
    ramp-signal-4 = 😃
    ramp-signal-5 = 😈

[module/date]
    type = internal/date
    interval = 5
    date = %a %b %e %Y
    time = %I:%M
    format-prefix = 
    format-prefix-foreground = ${colors.foreground-alt}
    label = %date%      %time%

[module/alsa]
    type = internal/alsa
    label-active-font = 1
    format-volume = <label-volume> <bar-volume>
    label-volume = VOL %percentage%
    label-volume-foreground = ${root.foreground}
    format-muted-foreground = ${colors.foreground}

    bar-volume-width = 10
    bar-volume-foreground-0 = ${colors.primary}
    bar-volume-foreground-1 = ${colors.primary}
    bar-volume-foreground-2 = ${colors.primary}
    bar-volume-foreground-3 = ${colors.primary}
    bar-volume-foreground-4 = ${colors.primary}
    bar-volume-foreground-5 = ${colors.secondary}
    bar-volume-foreground-6 = ${colors.secondary}
    bar-volume-gradient = false
    bar-volume-indicator = |
    bar-volume-indicator-font = 2
    bar-volume-fill = ─
    bar-volume-fill-font = 2
    bar-volume-empty = ─
    bar-volume-empty-font = 2
    bar-volume-empty-foreground = ${colors.foreground-alt}

[settings]
    screenchange-reload = false

[global/wm]
    margin-top = 0
    margin-bottom = 0